<h2>Books</h2>
  <table>
     <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th></th>
        </tr>
     </thead>
     <tbody>
       <% @books.each do |book| %><td>
         <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
            <td><%= link_to "edit", edit_book_path(book) %></td>
            <td><%= link_to "destroy", destroy_books_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></td>

         </tr>
       <% end %>
     </body>
  </table>
    <h2>New book</h2>
    <%= form_with model: @book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>


  </body>

