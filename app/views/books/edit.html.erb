<h2>Editing Book</h2>
<% if @book.errors.any? %>
      <div id="error_explanation">
        <h2 class="error_title"><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %></br>
  <%= f.submit 'Update Book' %></br>
  <%= link_to "Show",book_path(@book)%> |
  <a class="Back" href="/books">Back</a>
<% end %>
